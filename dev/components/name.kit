<div class="site-grid name-block">

    <h2 class="name-block__title">Create An Account</h2>

    <div class="name-block__grid">

        <div class="name-block__image">
            <img class="steps__image" src="./img/steps.png" alt="Steps" />
            <img class="steps2__image" src="./img/steps2.png" alt="Steps" />
            <img class="steps3__image" src="./img/steps3.png" alt="Steps" />
        </div>

        <div class="name-block__input">

            <div class="name__input">
                <input class="field-input" type="text" placeholder="First Name">
            </div>

            <div class="name__input">
                <input class="field-input" type="text" placeholder="Last Name">
            </div>

            <div class="name__input">
                <input class="date-month field-input" type="date">
            </div>

            <div class="name__input">
                <input class="field-input" type="text" placeholder="Email Address">
            </div>

            <div class="name__input">
                <input class="field-input" type="text" placeholder="Phone Number">
            </div>

            <div class="name__input">
                <input class="field-input" type="text" placeholder="Password">
            </div>

            <div class="name__input">
                <input class="field-input" type="text" placeholder="Confirm Password">
            </div>

        </div>
    </div>

    <div>
        <a class="submit__button" href="#">Submit</a>
    </div>

</div>